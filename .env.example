# OpenSentinel NVIDIA configuration
#
# Copy to .env and fill in your key:
#   cp .env.example .env

# Required
NVIDIA_API_KEY=
TAVILY_API_KEY=
LANGSMITH_API_KEY=

# Main model (NVIDIA NIM model id; "nvidia:" prefix is optional)
OPENSENTINEL_MODEL_NAME=qwen/qwen3.5-397b-a17b

# Optional: override model for subagents
# OPENSENTINEL_SUBAGENT_MODEL_NAME=meta/llama-3.3-70b-instruct

# Optional model params
OPENSENTINEL_MODEL_TEMPERATURE=0.3
OPENSENTINEL_MODEL_MAX_TOKENS=8192

# LangGraph deployment configuration
# Allows blocking I/O operations (needed for SkillsMiddleware file operations)
BG_JOB_ISOLATED_LOOPS=true
